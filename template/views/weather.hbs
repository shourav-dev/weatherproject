<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {{>headerlinks}}
</head>
<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                   <form action="" class="temp_form">
                       <input type="text" id="cityName" placeholder="Enter Your city Name" autocomplete="off">
                       <input type="submit" value="search" id="submitBtn">
                   </form>
               </div>
                   <div class="tempInfo">
                       <div class="top_layer">
                           <p id="day">TUESDAY</p>
                           <p id="today_date">13 OCT</p>
                       </div>
                       <div class="main_layer">
                           <p id="city_name">GET output shown here</p>
                       <div class="middle_layer data_hide">
                           <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                           <p id="temp_status"><i class="fa fa-cloud" area-hidden="true"></i> </p>

                       </div>
                   </div>
               </div>
                <!-- right side div -->
                </div>
                </div>
                </div>
    <!-- footer code -->
    {{>footer}}
    <script src="js/main.js"></script>
</body>

</html>